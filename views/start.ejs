 $('document').ready(function(){
      //if user wants to create his own room
  $('#createRoom').click(function(){

   let name= $('#name').val();

   let room=randomStr(4, '123457890abcdefghijklmnoz')+name.substring(0,3);
   
   console.log(room);
  $.post(`/chat/${room}`,
  {
    name: name,
    room: 1
  }//1 rooom means he created the room
  );
window.location.pathname='/chat'
 });
 //if user want to join a room
 $('#joinRoom').click(function(){
      let room=prompt("enter the code");
      let name=$('#name').val();
     $.post(`/chat/${room}`,
     {
          name: name,
          room: 0
     }//0 room means he wants to join a room

     );
     window.location.pathname='/chat'
 

 })
 
 //Randonstring Genrator
 function randomStr(len, arr) { 
            var ans = ''; 
            for (var i = len; i > 0; i--) { 
                ans +=  
                  arr[Math.floor(Math.random() * arr.length)]; 
            } 
            return ans; 
        } 
       
     });
